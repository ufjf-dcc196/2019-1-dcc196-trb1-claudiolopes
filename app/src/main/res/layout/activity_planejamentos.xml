<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PlanejamentosActivity">

     <android.support.v7.widget.RecyclerView
         android:id="@+id/rvPlanejamento"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         tools:layout_width="match_parent">

     </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/botaoNovoPlanejamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/novo_planejamento" />

    <Button
        android:id="@+id/botaoDisciplinasCursadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disciplinas_cursadas" />

    <Button
        android:id="@+id/botaoNovaDisciplina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nova_disciplina" />
</LinearLayout>